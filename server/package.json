{
  "name": "air-and-water-server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "build": "tsc",
    "serve": "node build/index.js"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "nodemonConfig": {
    "watch": [
      "build/"
    ]
  },
  "dependencies": {
    "express": "^4.17.1",
    "serialport": "^8.0.7",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/serialport": "^8.0.0",
    "@types/socket.io": "^2.1.4",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  }
}
